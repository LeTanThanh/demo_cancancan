<% if @comment.valid? %>
  $('.js-comment-body').val('');
  $('.js-comment-error').text('');

  var comment = '<%= j (render "posts/comment", comment: @comment).html_safe %>';
  $('.js-comments').prepend(comment);
<% else %>
  var error = '<%= j (@comment.errors.full_messages.first).html_safe %>';
  $('.js-comment-error').text(error);
<% end %>
