<% if @comment.valid? %>
  var comment = '<%= j (render "posts/comment", comment: @comment).html_safe %>';
  $('.js-comment[data-comment-id="'+ '<%= @comment.id %>' +'"]').html(comment);
<% else %>
  var error = '<%= j (@comment.errors.full_messages.first).html_safe %>'
  $('.js-comment[data-comment-id="'+ '<%= @comment.id %>' +'"]').find('.js-comment-error').text(error);
<% end %>
